@model FluentNHibernateMVC3.Models.ViewModels.HomeIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<ul>
@foreach ( var store in Model.Stores ) {
    <li>@store.Name</li>
    <li>Products:</li>
    <ul>
        @foreach ( var product in store.Products ) {
            <li>@product.Name</li>
        }
    </ul>
    <li>Staff:</li>
    <ul>
        @foreach ( var employee in store.Staff ) {
            <li>@employee.FirstName @employee.LastName</li>
        }
    </ul>
}
</ul>